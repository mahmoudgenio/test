<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFloor">


    <ImageView
        android:id="@+id/line_left"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/line_1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        />

    <ImageView
        android:id="@+id/line1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/line_left"
        app:layout_constraintTop_toTopOf="@id/line_left"
        android:background="@drawable/line"
        android:rotation="52"
        />

    <ImageView
        android:id="@+id/place1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintStart_toStartOf="@id/line_left"
        app:layout_constraintBottom_toTopOf="@id/line2"
        android:src="@drawable/car_image"
        android:layout_margin="12dp"
        android:rotation="210"
        />

    <ImageView
        android:id="@+id/line2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/line_left"
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:background="@drawable/line"
        android:layout_marginTop="30dp"
        android:rotation="52"
        />


    <ImageView
        android:id="@+id/line3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/line_left"
        app:layout_constraintTop_toBottomOf="@id/line2"
        android:background="@drawable/line"
        android:layout_marginTop="30dp"
        android:rotation="52"
        />

    <ImageView
        android:id="@+id/place2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/line2"
        app:layout_constraintStart_toStartOf="@id/line_left"
        app:layout_constraintBottom_toTopOf="@id/line3"
        android:src="@drawable/available"
        android:rotation="40"
        />


    <ImageView
        android:id="@+id/line4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/line_left"
        app:layout_constraintTop_toBottomOf="@id/line3"
        android:background="@drawable/line"
        android:layout_marginTop="30dp"
        android:rotation="52"
        />

    <ImageView
        android:id="@+id/place3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/line3"
        app:layout_constraintStart_toStartOf="@id/line_left"
        app:layout_constraintBottom_toTopOf="@id/line4"
        android:src="@drawable/available"
        android:rotation="40"
        />

    <ImageView
        android:id="@+id/line5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/line_left"
        app:layout_constraintTop_toBottomOf="@id/line4"
        android:background="@drawable/line"
        android:layout_marginTop="30dp"
        android:rotation="52"
        />

    <ImageView
        android:id="@+id/place4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/line4"
        app:layout_constraintStart_toStartOf="@id/line_left"
        app:layout_constraintBottom_toTopOf="@id/line5"
        android:src="@drawable/available"
        android:rotation="40"
        />

    <ImageView
        android:id="@+id/line6"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/line_left"
        app:layout_constraintTop_toBottomOf="@id/line5"
        android:background="@drawable/line"
        android:layout_marginTop="30dp"
        android:rotation="52"
        />

    <ImageView
        android:id="@+id/place5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/line5"
        app:layout_constraintStart_toStartOf="@id/line_left"
        app:layout_constraintBottom_toTopOf="@id/line6"
        android:src="@drawable/available"
        android:rotation="40"
        />

    <ImageView
        android:id="@+id/sec_line"
        android:layout_width="4dp"
        android:layout_height="400dp"
        app:layout_constraintStart_toEndOf="@id/place1"
        app:layout_constraintTop_toTopOf="@id/place1"
        app:layout_constraintBottom_toBottomOf="@id/line6"
        android:src="@drawable/line_1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        />


    <TextView
        android:id="@+id/entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#A2A0A0"
        app:layout_constraintStart_toEndOf="@id/sec_line"
        app:layout_constraintTop_toTopOf="@id/sec_line"
        android:layout_marginStart="30dp"
        />

    <ImageView
        android:id="@+id/arrow1"
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        app:layout_constraintStart_toStartOf="@id/entry"
        app:layout_constraintTop_toBottomOf="@id/entry"
        app:layout_constraintEnd_toEndOf="@id/entry"
        android:layout_marginTop="25dp"
        android:rotation="180"
        />

    <ImageView
        android:id="@+id/arrow2"
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        app:layout_constraintStart_toStartOf="@id/arrow1"
        app:layout_constraintTop_toBottomOf="@id/arrow1"
        app:layout_constraintEnd_toEndOf="@id/arrow1"
        android:layout_marginTop="50dp"
        android:rotation="180"
        />

    <ImageView
        android:id="@+id/arrow3"
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        app:layout_constraintStart_toStartOf="@id/arrow2"
        app:layout_constraintTop_toBottomOf="@id/arrow2"
        app:layout_constraintEnd_toEndOf="@id/arrow2"
        android:layout_marginTop="50dp"
        android:rotation="180"
        />


    <ImageView
        android:id="@+id/car_entry"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/car_image"
        android:backgroundTint="#567DF4"
        app:layout_constraintStart_toStartOf="@id/arrow3"
        app:layout_constraintTop_toBottomOf="@id/arrow3"
        app:layout_constraintEnd_toEndOf="@id/arrow3"
        android:rotation="270"
        />

    <TextView
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entry"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#A2A0A0"
        app:layout_constraintStart_toStartOf="@id/entry"
        app:layout_constraintEnd_toEndOf="@id/entry"
        app:layout_constraintTop_toBottomOf="@id/car_entry"
        android:layout_marginTop="20dp"
        />


    <ImageView
        android:id="@+id/third_line"
        android:layout_width="4dp"
        android:layout_height="400dp"
        app:layout_constraintStart_toEndOf="@id/entry"
        app:layout_constraintTop_toTopOf="@id/sec_line"
        app:layout_constraintBottom_toBottomOf="@id/sec_line"
        android:src="@drawable/line_1"
        android:layout_marginStart="40dp"
        />


    <ImageView
        android:id="@+id/line_right"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="@id/line_left"
        app:layout_constraintBottom_toBottomOf="@id/line_left"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/line_1"
        android:layout_marginEnd="20dp"

        />

    <ImageView
        android:id="@+id/line7"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@id/line_right"
        app:layout_constraintTop_toTopOf="@id/line_right"
        android:background="@drawable/line"
        />

    <ImageView
        android:id="@+id/place6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/line7"
        app:layout_constraintEnd_toEndOf="@id/line_right"
        app:layout_constraintBottom_toTopOf="@id/line8"
        android:src="@drawable/available"
        android:rotation="340"
        />

    <ImageView
        android:id="@+id/line8"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@id/line_right"
        app:layout_constraintTop_toTopOf="@id/line2"
        app:layout_constraintTop_toBottomOf="@id/place6"
        android:background="@drawable/line"
        />

    <ImageView
        android:id="@+id/line9"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@id/line_right"
        app:layout_constraintTop_toTopOf="@id/line3"
        app:layout_constraintTop_toBottomOf="@id/place6"
        android:background="@drawable/line"
        />


    <ImageView
        android:id="@+id/place7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/line8"
        app:layout_constraintEnd_toEndOf="@id/line_right"
        app:layout_constraintBottom_toTopOf="@id/line9"
        android:src="@drawable/available"
        android:rotation="340"
        />


    <ImageView
        android:id="@+id/line10"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@id/line_right"
        app:layout_constraintTop_toTopOf="@id/line4"
        app:layout_constraintTop_toBottomOf="@id/place6"
        android:background="@drawable/line"
        />

    <ImageView
        android:id="@+id/place8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/line9"
        app:layout_constraintEnd_toEndOf="@id/line_right"
        app:layout_constraintBottom_toTopOf="@id/line10"
        android:src="@drawable/available"
        android:rotation="340"
        />

    <ImageView
        android:id="@+id/line11"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@id/line_right"
        app:layout_constraintTop_toTopOf="@id/line5"
        app:layout_constraintTop_toBottomOf="@id/place6"
        android:background="@drawable/line"
        />

    <ImageView
        android:id="@+id/place9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/line10"
        app:layout_constraintEnd_toEndOf="@id/line_right"
        app:layout_constraintBottom_toTopOf="@id/line11"
        android:src="@drawable/available"
        android:rotation="340"
        />



    <ImageView
        android:id="@+id/line12"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@id/line_right"
        app:layout_constraintTop_toTopOf="@id/line6"
        app:layout_constraintTop_toBottomOf="@id/place6"
        android:background="@drawable/line"
        />


    <ImageView
        android:id="@+id/place10"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/line11"
        app:layout_constraintEnd_toEndOf="@id/line_right"
        app:layout_constraintBottom_toTopOf="@id/line12"
        android:src="@drawable/car_yellow"
        android:rotation="115"
        />






</androidx.constraintlayout.widget.ConstraintLayout>