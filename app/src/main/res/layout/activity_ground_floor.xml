<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroundFloor"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Available Places in Floor 1"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="6dp"
        />




    <ImageView
        android:id="@+id/line1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/line_left"
        app:layout_constraintTop_toTopOf="@id/line_left"
        android:background="@drawable/line"
        android:rotation="52"
        />

    <ImageView
        android:id="@+id/place11"
        android:layout_width="18dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="@id/line_left"
        app:layout_constraintBottom_toTopOf="@id/line2"
        app:layout_constraintWidth_max="250dp"
        app:layout_constraintHeight_max="250dp"
        android:src="@drawable/place1"
        android:layout_marginStart="40dp"
        android:rotation="1"

        />

    <ImageView
        android:id="@+id/line_left"
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/line_1"
        android:backgroundTint="#FF1522"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        />


    <ImageView
        android:id="@+id/line2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/line_left"
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:background="@drawable/line"
        android:layout_marginTop="30dp"
        android:rotation="52"
        />


    <ImageView
        android:id="@+id/line3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/line_left"
        app:layout_constraintTop_toBottomOf="@id/line2"
        android:background="@drawable/line"
        android:layout_marginTop="30dp"
        android:rotation="52"
        />


    <ImageView
        android:id="@+id/place12"
        android:layout_width="18dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/line2"
        app:layout_constraintStart_toStartOf="@id/line_left"
        app:layout_constraintBottom_toTopOf="@id/line3"
        android:src="@drawable/place2"
        android:layout_marginStart="40dp"
        android:rotation="1"
        />


    <ImageView
        android:id="@+id/line4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/line_left"
        app:layout_constraintTop_toBottomOf="@id/line3"
        android:background="@drawable/line"
        android:layout_marginTop="30dp"
        android:rotation="52"
        />


    <ImageView
        android:id="@+id/place13"
        android:layout_width="18dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/line3"
        app:layout_constraintStart_toStartOf="@id/line_left"
        app:layout_constraintBottom_toTopOf="@id/line4"
        android:src="@drawable/place3"
        android:layout_marginStart="40dp"
        android:rotation="1"
        />

    <ImageView
        android:id="@+id/line5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/line_left"
        app:layout_constraintTop_toBottomOf="@id/line4"
        android:background="@drawable/line"
        android:layout_marginTop="30dp"
        android:rotation="52"
        />

    <ImageView
        android:id="@+id/place14"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/line4"
        app:layout_constraintStart_toStartOf="@id/line_left"
        app:layout_constraintBottom_toTopOf="@id/line5"
        android:src="@drawable/car1"
        android:rotation="1"
        />


    <ImageView
        android:id="@+id/line_right"
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        app:layout_constraintTop_toTopOf="@id/line_left"
        app:layout_constraintBottom_toBottomOf="@id/line_left"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/line_1"
        android:layout_marginEnd="15dp"

        />

    <ImageView
        android:id="@+id/line7"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@id/line_right"
        app:layout_constraintTop_toTopOf="@id/line_right"
        android:background="@drawable/line"
        />

    <ImageView
        android:id="@+id/place16"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/line7"
        app:layout_constraintEnd_toEndOf="@id/line_right"
        app:layout_constraintBottom_toTopOf="@id/line8"
        android:src="@drawable/car1"
        android:rotation="130"
        />

    <ImageView
        android:id="@+id/line8"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@id/line_right"
        app:layout_constraintTop_toTopOf="@id/line2"
        app:layout_constraintTop_toBottomOf="@id/place16"
        android:background="@drawable/line"
        />

    <ImageView
        android:id="@+id/line9"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@id/line_right"
        app:layout_constraintTop_toTopOf="@id/line3"
        app:layout_constraintTop_toBottomOf="@id/place16"
        android:background="@drawable/line"
        />


    <ImageView
        android:id="@+id/place9"
        android:layout_width="18dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/line8"
        app:layout_constraintEnd_toEndOf="@id/line_right"
        app:layout_constraintBottom_toTopOf="@id/line9"
        android:src="@drawable/place6"
        android:layout_marginEnd="40dp"
        android:rotation="1"
        />


    <ImageView
        android:id="@+id/line10"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@id/line_right"
        app:layout_constraintTop_toTopOf="@id/line4"
        app:layout_constraintTop_toBottomOf="@id/place16"
        android:background="@drawable/line"
        />

    <ImageView
        android:id="@+id/place18"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/line9"
        app:layout_constraintEnd_toEndOf="@id/line_right"
        app:layout_constraintBottom_toTopOf="@id/line10"
        android:src="@drawable/car1"
        android:rotation="130"
        />

    <ImageView
        android:id="@+id/line11"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@id/line_right"
        app:layout_constraintTop_toTopOf="@id/line5"
        app:layout_constraintTop_toBottomOf="@id/place16"
        android:background="@drawable/line"
        />

    <ImageView
        android:id="@+id/place19"
        android:layout_width="18dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/line10"
        app:layout_constraintEnd_toEndOf="@id/line_right"
        app:layout_constraintBottom_toTopOf="@id/line11"
        android:src="@drawable/place8"
        android:layout_marginEnd="40dp"
        android:rotation="1"
        />

    <ImageView
        android:id="@+id/right_under"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/right_under"
        />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintStart_toStartOf="@id/curve_right"
        app:layout_constraintBottom_toBottomOf="@id/curve_right"
        android:src="@drawable/arrow_red"
        android:rotation="150"
        />


    <ImageView
        android:id="@+id/curve_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/curve_right"
        />

    <ImageView
        android:id="@+id/left_under"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/left_under"
        />

    <TextView
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Exit"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="22sp"
        android:layout_marginStart="110sp"
        android:textColor="#000000"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/line_left"
        app:layout_constraintBottom_toBottomOf="@id/line_left"
        android:src="@drawable/middle_line"
        android:layout_marginTop="60dp"
        />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintStart_toStartOf="@id/curve_left"
        app:layout_constraintBottom_toBottomOf="@id/curve_left"
        android:src="@drawable/arrow_red"
        android:layout_marginStart="70dp"
        android:rotation="210"
        />

    <ImageView
        android:id="@+id/arrow_red3"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/arrow_red"
        app:layout_constraintBottom_toTopOf="@id/exit"
        app:layout_constraintEnd_toEndOf="@id/exit"
        android:layout_marginBottom="12dp"
        android:rotation="270"

        />

    <ImageView
        android:id="@+id/arroe_red4"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/arrow_red"
        app:layout_constraintBottom_toTopOf="@id/arrow_red3"
        app:layout_constraintEnd_toEndOf="@id/exit"
        android:layout_marginBottom="28dp"
        android:rotation="270"
        />

    <ImageView
        android:id="@+id/curve_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:src="@drawable/curve_left"
        />
    <ImageView
        android:id="@+id/arroe_red1"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/arrow_red"
        app:layout_constraintBottom_toTopOf="@id/entry"
        app:layout_constraintEnd_toEndOf="@id/entry"
        android:layout_marginBottom="12dp"
        android:rotation="91"
        android:layout_marginEnd="12dp"
        />

    <ImageView
        android:id="@+id/arroe_red2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/arrow_red"
        app:layout_constraintBottom_toTopOf="@id/arroe_red1"
        app:layout_constraintEnd_toEndOf="@id/entry"
        android:layout_marginBottom="28dp"
        android:rotation="91"
        android:layout_marginEnd="12dp"
        />


    <TextView
        android:id="@+id/entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/bottom1"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Entry"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/right_under" />

    <ImageView
        android:id="@+id/line12"
        android:layout_width="101dp"
        android:layout_height="50dp"
        android:background="@drawable/line"
        app:layout_constraintEnd_toEndOf="@id/line_right"
        app:layout_constraintTop_toBottomOf="@id/place16"
        app:layout_constraintTop_toTopOf="@id/line7" />

    <ImageView
        android:id="@+id/bottom1"
        android:layout_width="62dp"
        android:layout_height="41dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/bottom"

        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="116dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom1"
        android:src="@drawable/bottom2"

        />


    <ImageView
        android:id="@+id/back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/icon_next"
        android:backgroundTint="#000000"
        android:layout_marginTop="8dp"
        android:layout_marginStart="18dp"
        android:rotation="180"

        />


    <Button
        android:id="@+id/floor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="45dp"
        android:backgroundTint="#FF1522"
        android:layout_marginStart="18dp"
        android:text="Floor 2"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />


</androidx.constraintlayout.widget.ConstraintLayout>